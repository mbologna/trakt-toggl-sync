# Trakt API Configuration
# Get these from https://trakt.tv/oauth/applications
TRAKT_CLIENT_ID=your_trakt_client_id_here
TRAKT_CLIENT_SECRET=your_trakt_client_secret_here

# How many days of history to sync (default: 7)
TRAKT_HISTORY_DAYS=7

# Toggl API Configuration
# Get API token from https://track.toggl.com/profile
TOGGL_API_TOKEN=your_toggl_api_token_here

# Find these in your Toggl workspace
TOGGL_WORKSPACE_ID=your_workspace_id
TOGGL_PROJECT_ID=your_project_id

# Optional: Comma-separated tags for entries
TOGGL_TAGS=watching,entertainment

# Optional: Override token file location (useful for Docker)
# TRAKT_TOKEN_FILE=/app/data/.trakt_tokens.json
